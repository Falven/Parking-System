<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="PSPersistence">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>Model.Garage</class>
        <class>Model.EntryGate</class>
        <class>Model.ExitGate</class>
        <class>Model.Ticket</class>
        <class>Model.Payment</class>
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:derby:ParkingSystemDB"/>
            <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver"/>
            <property name="eclipselink.ddl-generation" value="create-tables"/>
        </properties>
    </persistence-unit>
</persistence>
